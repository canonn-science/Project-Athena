{
  "connection": "default",
  "collectionName": "msreports",
  "info": {
    "name": "msreport",
    "description": "Reporting for Megaships"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "systemName": {
      "type": "string",
      "required": true
    },
    "orbitBody": {
      "type": "string"
    },
    "shipName": {
      "type": "string",
      "required": true
    },
    "shipTag": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "flightOps": {
      "type": "boolean"
    },
    "flightSchedule": {
      "type": "boolean"
    },
    "dockable": {
      "type": "boolean"
    },
    "cmdrName": {
      "type": "string",
      "required": true
    },
    "cmdrComment": {
      "type": "text"
    },
    "isBeta": {
      "type": "boolean"
    },
    "screenshot": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "reportStatus": {
      "default": "pending",
      "type": "enumeration",
      "required": true,
      "enum": [
        "pending",
        " updated",
        " accepted",
        " declined",
        " issue"
      ]
    },
    "reportComment": {
      "type": "text"
    },
    "voteCount": {
      "type": "integer"
    },
    "added": {
      "type": "boolean"
    },
    "site": {
      "model": "mssite"
    }
  }
}
