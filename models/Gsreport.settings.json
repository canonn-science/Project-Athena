{
  "connection": "default",
  "collectionName": "gsreports",
  "info": {
    "name": "gsreport",
    "description": "Reporting for Guardian Structures"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": "Need to update type to match current types"
  },
  "attributes": {
    "systemName": {
      "type": "string",
      "required": true
    },
    "bodyName": {
      "type": "string",
      "required": true
    },
    "latitude": {
      "type": "float",
      "required": true
    },
    "longitude": {
      "type": "float",
      "required": true
    },
    "type": {
      "enum": [
        "Structure",
        "Type1",
        "Type2",
        "Type3",
        "Type4",
        "Type5"
      ],
      "type": "enumeration",
      "required": true
    },
    "cmdrName": {
      "type": "string",
      "required": true
    },
    "screenshot": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "reportStatus": {
      "enum": [
        "pending",
        "accepted",
        "declined",
        "issue"
      ],
      "type": "enumeration",
      "required": true
    },
    "comment": {
      "type": "text"
    },
    "voteCount": {
      "type": "integer"
    },
    "added": {
      "type": "boolean"
    },
    "site": {
      "model": "bmsite"
    }
  }
}